<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="login.css" />
  <title>login Page</title>
</head>
<!-- /Main Site -->
<body>
  <div class="container">
    <div class="content">
      <h2 class="title">Welcome <span>ADMIN.</span></h2>
      <form action="/login" method="POST" class="login-content" id="form">
        <div class="input-group">
          <input
            autofocus
            type="email"
            placeholder="Enter your email"
            name="email"
            class="input input-error"
            required
            id="email"
          />
          <div class="email error"><span id = oops><%= emailerror %></span></div>
        </div>
        <div class="input-group">
          <input
            type="password"
            required
            placeholder="Enter your password"
            class="input input-error"
            name="password"
            id="password"
          />
          <div class="password error"><span id="oops"><%= passworderror %></span></div>
        </div>

        <!-- <a href="./admin/admin.html"> -->
        <button
          class="login-btn"
          type="submit"
          id="login_btn"
          onsubmit="postInfo"
        >
          Login
        </button>
        <!-- </a> -->
        <a href="signup" class="go-back">
          <div class="back-to-home">Signup</div>
        </a>
      </form>
    </div>
  </div>
</body>
<!-- /Main Site -->


<!-- include footer -->
<%- include('include/_footer') %>
